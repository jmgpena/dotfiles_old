# -*- mode: shell-script -*-

# Bash aliases

alias reload='. ~/.bashrc'

# general commands
alias h='history'
alias e='exit'
alias md='mkdir -p'

# top
alias tu='top -o cpu'
alias tm='top -o vsize'

# ls
if [[ "$OSTYPE" =~ ^darwin ]]; then
    alias ls='command ls -G'
else
    alias ls='command ls --color'
fi
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# git
alias g='git status'
alias gp='git push'

# emacs
alias me='emacs -nw -Q'
alias sme='sudo emacs -nw -Q'
